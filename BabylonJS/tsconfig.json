{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "isolatedModules": false,
        "lib": [
            "dom",
            "es2015.promise",
            "es5",
            "ES6"
        ],
        //"declaration": true, //if true, will generate declaration files (like header files)
        "outDir": "./src",
        "types": [
            "babylonjs",
            "babylonjs-gui",
            "babylonjs-materials",
            "babylonjs-loaders"
        ]
    },
    "files": [
        "./src/index.ts"
    ]
}